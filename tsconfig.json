{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2018"
        ],
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "./"
    ],
    "exclude": [
        "./node_modules",
        "./test",
        "./dist"
    ]
}